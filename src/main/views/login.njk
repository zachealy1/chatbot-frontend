{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}

{% block pageTitle %}
  HMCTS chatbot
{% endblock %}

{% block header %}
  {{ govukHeader({
    classes: "govuk-header--full-width-border"
  }) }}

  {{ govukServiceNavigation({
    serviceName: "HMCTS chatbot"
  }) }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Sign in</h1>

  <p class="govuk-body">
    If you do not have an account, you can <a href="/register" class="govuk-link">request one now</a>.
  </p>

  <form action="/login/password" method="post">
    {{ govukInput({
      label: { text: "Username" },
      classes: "govuk-!-width-one-half",
      id: "username",
      name: "username"
    }) }}

    <div class="govuk-form-group">
      <label class="govuk-label" for="password">
        Password
      </label>

      <div class="govuk-!-display-inline-flex govuk-!-align-items-baseline">
        <input
          class="govuk-input govuk-!-width-one-half"
          id="password"
          name="password"
          type="password"
        >

        <button type="button" class="govuk-button govuk-button--secondary toggle-button" data-module="govuk-button" aria-expanded="false">
          Show
        </button>
      </div>
    </div>

    {{ govukButton({
      text: "Continue",
      type: "submit"
    }) }}
  </form>

  <p class="govuk-body">
    <a href="/forgot-password" class="govuk-link">Forgotten your password?</a>
  </p>

  <script nonce="{{ scriptNonce }}" src="password-dev.js"></script>
{% endblock %}
