{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}

{% block pageTitle %}
  HMCTS chatbot admin
{% endblock %}

{% block header %}
  {{ govukHeader({
    classes: "govuk-header--full-width-border"
  }) }}

  {{ govukServiceNavigation({
    serviceName: "HMCTS chatbot"
  }) }}
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Reset password</h1>

  <p class="govuk-body">
    Choose a new password.
  </p>

  <form action="/reset-password" method="post" novalidate>

    <!-- New Password Field + Show/Hide -->
    <div class="govuk-form-group">
      <label class="govuk-label" for="new-password">New password</label>

      <div class="govuk-!-display-inline-flex govuk-!-align-items-baseline">
        <input
          class="govuk-input govuk-!-width-one-half"
          id="new-password"
          name="newPassword"
          type="password"
        >
        <button
          type="button"
          class="govuk-button govuk-show-button govuk-button--secondary govuk-!-margin-left-1 toggle-button"
          data-module="govuk-button"
          aria-expanded="false"
        >
          Show
        </button>
      </div>
    </div>

    <!-- Confirm New Password Field + Show/Hide -->
    <div class="govuk-form-group">
      <label class="govuk-label" for="confirm-password">Confirm new password</label>

      <div class="govuk-!-display-inline-flex govuk-!-align-items-baseline">
        <input
          class="govuk-input govuk-!-width-one-half"
          id="confirm-password"
          name="confirmPassword"
          type="password"
        >
        <button
          type="button"
          class="govuk-button govuk-show-button govuk-button--secondary govuk-!-margin-left-1 toggle-button"
          data-module="govuk-button"
          aria-expanded="false"
        >
          Show
        </button>
      </div>
    </div>

    {{ govukButton({
      text: "Continue",
      classes: "govuk-!-margin-top-3",
      href: "/chat"
    }) }}

  </form>

  <script src="password-dev.js"></script>
{% endblock %}
