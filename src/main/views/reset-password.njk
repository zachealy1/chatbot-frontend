{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "template.njk" %}

{% block pageTitle %}
  HMCTS chatbot
{% endblock %}

{% block header %}
  {{ govukHeader({
    classes: "govuk-header--full-width-border"
  }) }}

  <section
    aria-label="Service information"
    class="govuk-service-navigation"
    data-module="govuk-service-navigation"
  >
    <div class="govuk-width-container">
      <div class="govuk-service-navigation__container service-navigation--login-layout">
      <span class="govuk-service-navigation__service-name">
        <a>
          {{ __("appName") }}
        </a>
      </span>

        <!-- Language switcher added inside the same container -->
        <nav class="language-select" aria-label="Language switcher">
          <ul class="language-select__list">
            <li class="language-select__list-item">
              {% if lang == "cy" %}
                <a href="?lang=en" class="govuk-link">English</a>
              {% else %}
                <span aria-current="true">English</span>
              {% endif %}
            </li>
            <li class="language-select__list-item">
              {% if lang == "cy" %}
                <span aria-current="true">Cymraeg</span>
              {% else %}
                <a
                  href="?lang=cy"
                  hreflang="cy"
                  lang="cy"
                  rel="alternate"
                  class="govuk-link"
                  data-journey-click="link - click:lang-select:Cymraeg"
                >
                <span class="govuk-visually-hidden">
                  Newid yr iaith ir Gymraeg
                </span>
                  <span aria-hidden="true">Cymraeg</span>
                </a>
              {% endif %}
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </section>
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">Reset password</h1>

  {% if error %}
    <div class="govuk-error-summary" role="alert" tabindex="-1">
      <h2 class="govuk-error-summary__title">There is a problem</h2>
      <p class="govuk-error-summary__body">{{ error }}</p>
    </div>
  {% endif %}

  <form action="/forgot-password/reset-password" method="post" novalidate>
    <div class="govuk-form-group {% if error %}govuk-form-group--error{% endif %}" id="password-section">
      <h1 class="govuk-label-wrapper">
        <label class="govuk-label">Password</label>
      </h1>
      <div id="password-hint" class="govuk-hint">
        <p class="govuk-body">Your password must:</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>Be at least 8 characters long</li>
          <li>Include an uppercase letter</li>
          <li>Include a lowercase letter</li>
          <li>Include a number</li>
          <li>Include a special character (e.g., @, $, !, %, *, ?)</li>
        </ul>
      </div>

      <!-- New Password -->
      <label class="govuk-label" for="password">New Password</label>
      <input
        class="govuk-input govuk-input-password govuk-!-width-one-half"
        id="password"
        name="password"
        type="password"
        placeholder="Leave blank to keep the current password"
        aria-describedby="password-hint"
      >
      <button
        type="button"
        class="govuk-button govuk-button--secondary govuk-button-password--secondary toggle-button"
        data-target="password"
        data-module="govuk-button"
        aria-expanded="false">
        Show
      </button>

      <!-- Confirm New Password -->
      <label class="govuk-label" for="confirm-password">Confirm New Password</label>
      <input
        class="govuk-input govuk-!-width-one-half"
        id="confirm-password"
        name="confirmPassword"
        type="password"
        placeholder="Re-enter the new password"
      >
      <button
        type="button"
        class="govuk-button govuk-button--secondary toggle-button"
        data-target="confirm-password"
        data-module="govuk-button"
        aria-expanded="false">
        Show
      </button>
    </div>

    {{ govukButton({
      text: "Continue",
      classes: "govuk-!-margin-top-3"
    }) }}
  </form>

  <script src="/showPassword-dev.js" defer></script>
  <script src="/passwordValidationRegister-dev.js" defer></script>
{% endblock %}

