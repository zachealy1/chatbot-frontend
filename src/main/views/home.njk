{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

{% extends "template.njk" %}

{% block header %}
  {{ govukHeader({
    classes: "govuk-header--full-width-border"
  }) }}

  {{ govukServiceNavigation({
    serviceName: "HMCTS chatbot",
    navigation: [
      {
        href: "/",
        text: "Chat",
        active: true
      },
      {
        href: "/chat-history",
        text: "Chat History"
      },
      {
        href: "/contact-support",
        text: "Contact Support"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container scrollable-div">
    <div class="govuk-chat-box">

      {% for i in range(1, 20) %}
        <div class="govuk-chat-profile">
          <img src="/assets/images/user-profile.jpg" alt="User profile picture" class="govuk-chat-profile-picture">
          <span class="govuk-chat-username">You</span>
        </div>
        <div class="govuk-chat-message govuk-chat-message--user">
          <span class="govuk-visually-hidden">User:</span>
          <p>This is message {{ i }} from the user.</p>
        </div>

        <div class="govuk-chat-profile">
          <img src="/assets/images/chatbot-profile.jpg" alt="Chatbot profile picture" class="govuk-chat-profile-picture">
          <span class="govuk-chat-username">GOV.UK Chat</span>
        </div>
        <div class="govuk-chat-message govuk-chat-message--bot">
          <span class="govuk-visually-hidden">Chatbot:</span>
          <p>This is response {{ i }} from the chatbot.</p>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Chat Input Section -->
  <div class="custom-full-width-border">
    <div class="govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <div class="govuk-form-group">
            <input class="govuk-input" id="event-name" name="eventName" type="text" placeholder="Type your message">
          </div>
        </div>
        <div class="govuk-grid-column-one-third">
          <button type="submit" class="govuk-button" data-module="govuk-button" style="margin-top: 24px;">
            Send
          </button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

