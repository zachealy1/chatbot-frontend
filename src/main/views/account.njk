{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% extends "template.njk" %}

{% block pageTitle %}
  HMCTS chatbot
{% endblock %}

{% block header %}
  {{ govukHeader({ classes: "govuk-header--full-width-border" }) }}

  <section aria-label="Service information"
           class="govuk-service-navigation"
           data-module="govuk-service-navigation">
    <div class="govuk-width-container">
      <div class="govuk-service-navigation__container">
        <span class="govuk-service-navigation__service-name">
          <a>{{ __("appName") }}</a>
        </span>

        <nav aria-label="Menu" class="govuk-service-navigation__wrapper">
          <button type="button"
                  class="govuk-service-navigation__toggle govuk-js-service-navigation-toggle"
                  aria-controls="navigation"
                  hidden>
            {{ __("navChat") }}
          </button>
          <ul class="govuk-service-navigation__list" id="navigation">
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/chat">
                {{ __("navChat") }}
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/chat-history">
                {{ __("navChatHistory") }}
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/contact-support">
                {{ __("navContactSupport") }}
              </a>
            </li>
            <li class="govuk-service-navigation__item govuk-service-navigation__item--active">
              <a class="govuk-service-navigation__link"
                 href="/account"
                 aria-current="page">
                {{ __("navAccount") }}
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link"
                 href="/logout"
                 id="logoutLink">
                {{ __("navLogout") }}
              </a>
            </li>
          </ul>
        </nav>

        <nav class="language-select" aria-label="Language switcher">
          <ul class="language-select__list">
            <li class="language-select__list-item">
              {% if lang == "cy" %}
                <a href="?lang=en" class="govuk-link">English</a>
              {% else %}
                <span aria-current="true">English</span>
              {% endif %}
            </li>
            <li class="language-select__list-item">
              {% if lang == "cy" %}
                <span aria-current="true">Cymraeg</span>
              {% else %}
                <a href="?lang=cy"
                   hreflang="cy"
                   lang="cy"
                   rel="alternate"
                   class="govuk-link">
                  <span class="govuk-visually-hidden">
                    Newid yr iaith i Gymraeg
                  </span>
                  <span aria-hidden="true">Cymraeg</span>
                </a>
              {% endif %}
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </section>
{% endblock %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ __("manageAccountHeading") }}</h1>

  {% if updated %}
    <div class="govuk-notification-banner govuk-notification-banner--success"
         role="alert"
         aria-labelledby="govuk-notification-banner-title"
         data-module="govuk-notification-banner">
      <div class="govuk-notification-banner__header">
        <h2 class="govuk-notification-banner__title"
            id="govuk-notification-banner-title">
          {{ __("successAccountUpdatedHeading") }}
        </h2>
      </div>
      <div class="govuk-notification-banner__content">
        <h3 class="govuk-notification-banner__heading">
          {{ __("successAccountUpdatedMessage") }}
        </h3>
        <p class="govuk-body">
          {{ __("contactSupportHtml") | safe }}
        </p>
      </div>
    </div>
  {% endif %}

  {% if errors %}
    <div class="govuk-error-summary" role="alert" tabindex="-1">
      <h2 class="govuk-error-summary__title">
        {{ __("errorSummaryTitle") }}
      </h2>
      <ul class="govuk-list govuk-error-summary__list">
        {% for msg in errors %}
          <li>{{ msg }}</li>
        {% endfor %}
      </ul>
    </div>
  {% endif %}

  <form action="/account/update" method="POST" novalidate>
    <div class="govuk-form-group">
      <label class="govuk-label" for="username">{{ __("labelUsername") }}</label>
      <input
        class="govuk-input govuk-!-width-one-half {% if errors.username %}govuk-input--error{% endif %}"
        id="username"
        name="username"
        type="text"
        placeholder="{{ __("labelUsername") }}"
        value="{{ username|default('') }}"
        required
      >
      {% if errors.username %}
        <span id="username-error" class="govuk-error-message">
          <span class="govuk-visually-hidden">Error:</span> {{ errors.username }}
        </span>
      {% endif %}
    </div>

    <div class="govuk-form-group">
      <label class="govuk-label" for="email">{{ __("labelEmail") }}</label>
      <input
        class="govuk-input govuk-!-width-one-half {% if errors.email %}govuk-input--error{% endif %}"
        id="email"
        name="email"
        type="email"
        placeholder="{{ __("labelEmail") }}"
        value="{{ email|default('') }}"
        required
      >
      {% if errors.email %}
        <span id="email-error" class="govuk-error-message">
          <span class="govuk-visually-hidden">Error:</span> {{ errors.email }}
        </span>
      {% endif %}
    </div>

    {% set di = {
      fieldset: {
        legend: { text: __("labelDateOfBirth"), isPageHeading: false }
      },
      hint: { text: __("hintDateOfBirth") },
      id: "date-of-birth",
      namePrefix: "date-of-birth",
      items: [
        { name: "day",   classes: "govuk-input--width-2", value: day|default('') },
        { name: "month", classes: "govuk-input--width-2", value: month|default('') },
        { name: "year",  classes: "govuk-input--width-4", value: year|default('') }
      ]
    } %}
    {% if errors.dateOfBirth %}
      {% set di = di | merge({ errorMessage:{ text: errors.dateOfBirth } }) %}
    {% endif %}
    {{ govukDateInput(di) }}

    <div class="govuk-form-group">
      <label class="govuk-label govuk-label--l" for="password">
        {{ __("passwordLabel") }}
      </label>
      <div id="password-hint" class="govuk-hint">
        <p class="govuk-body">{{ __("passwordHintTitle") }}</p>
        <ul class="govuk-list govuk-list--bullet">
          <li>{{ __("passwordCriteriaBullet1") }}</li>
          <li>{{ __("passwordCriteriaBullet2") }}</li>
          <li>{{ __("passwordCriteriaBullet3") }}</li>
          <li>{{ __("passwordCriteriaBullet4") }}</li>
          <li>{{ __("passwordCriteriaBullet5") }}</li>
        </ul>
      </div>
      <label class="govuk-label" for="password">{{ __("labelNewPassword") }}</label>
      <input
        class="govuk-input govuk-input-password govuk-!-width-one-half"
        id="password"
        name="password"
        type="password"
        placeholder="{{ __("passwordPlaceholder") }}"
        aria-describedby="password-hint"
      >
      <button
        type="button"
        class="govuk-button govuk-button--secondary govuk-button-password--secondary toggle-button"
        data-target="password"
        data-module="govuk-button"
        aria-expanded="false"
      >
        {{ __("showButton") }}
      </button>

      <label class="govuk-label" for="confirm-password">
        {{ __("confirmPasswordLabel") }}
      </label>
      <input
        class="govuk-input govuk-!-width-one-half"
        id="confirm-password"
        name="confirmPassword"
        type="password"
        placeholder="{{ __("confirmPasswordPlaceholder") }}"
      >
      <button
        type="button"
        class="govuk-button govuk-button--secondary toggle-button"
        data-target="confirm-password"
        data-module="govuk-button"
        aria-expanded="false"
      >
        {{ __("showButton") }}
      </button>
    </div>

    {{ govukButton({
      text: __("buttonSaveChanges"),
      classes: "govuk-!-margin-top-3",
      type: "submit"
    }) }}
  </form>

  <script src="showPassword-dev.js"></script>
  <script src="passwordValidationAccount-dev.js"></script>
  <script src="dateOfBirthValidation-dev.js"></script>
  <script src="emailValidation-dev.js"></script>
  <script src="logout-dev.js"></script>
{% endblock %}
