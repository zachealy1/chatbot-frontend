{% from "govuk/components/header/macro.njk" import govukHeader %}
{% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

{% extends "template.njk" %}

{% block pageTitle %}
  HMCTS chatbot
{% endblock %}

{% block header %}
  {{ govukHeader({
    classes: "govuk-header--full-width-border",
    homepageUrl: "/chat"
  }) }}

  <section aria-label="Service information" class="govuk-service-navigation" data-module="govuk-service-navigation">
    <div class="govuk-width-container">
      <div class="govuk-service-navigation__container">
      <span class="govuk-service-navigation__service-name">
        <a href="#" class="govuk-service-navigation__link">
          HMCTS chatbot
        </a>
      </span>
        <nav aria-label="Menu" class="govuk-service-navigation__wrapper">
          <button
            type="button"
            class="govuk-service-navigation__toggle govuk-js-service-navigation-toggle"
            aria-controls="navigation"
            hidden
          >
            Menu
          </button>
          <ul class="govuk-service-navigation__list" id="navigation">
            <li class="govuk-service-navigation__item govuk-service-navigation__item--active">
              <a
                class="govuk-service-navigation__link"
                href="/chat"
                aria-current="true"
              >
                <strong class="govuk-service-navigation__active-fallback">
                  Chat
                </strong>
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/chat-history">
                Chat History
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/contact-support">
                Contact Support
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a class="govuk-service-navigation__link" href="/account">
                Account
              </a>
            </li>
            <li class="govuk-service-navigation__item">
              <a
                class="govuk-service-navigation__link"
                href="/logout"
                id="logoutLink"
              >
                Logout
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </section>
{% endblock %}

{% block content %}
  <div
    id="chat-container"
    data-chat-id="{{ chatId|default('') }}"
  >
    <div class="govuk-width-container">
      <div class="govuk-chat-box scrollable-chat-div" id="chat-box">
        {% if messages %}
          {% for message in messages %}
            <div class="govuk-chat-profile">
              {% if message.sender == 'user' %}
                <img
                  src="/assets/images/user-profile.jpg"
                  alt="User profile picture"
                  class="govuk-chat-profile-picture">
                <span class="govuk-chat-username">You</span>
              {% else %}
                <img
                  src="/assets/images/chatbot-profile.jpg"
                  alt="Chatbot profile picture"
                  class="govuk-chat-profile-picture">
                <span class="govuk-chat-username">Chatbot</span>
              {% endif %}
            </div>
            <div
              class="govuk-chat-message {% if message.sender == 'user' %}govuk-chat-message--user{% else %}govuk-chat-message--bot{% endif %}">
              <span class="govuk-visually-hidden">
                {% if message.sender == 'user' %}User:{% else %}Chatbot:{% endif %}
              </span>
              <p>{{ message.message | safe }}</p>
            </div>
          {% endfor %}
        {% else %}
        {% endif %}
      </div>
    </div>

    <!-- Input Section -->
    <div class="custom-full-width-border">
      <div class="govuk-width-container">
        <input
          class="govuk-input"
          id="chat-input"
          name="chatInput"
          type="text"
          placeholder="Type your message"
        >
        <button
          type="button"
          class="govuk-button govuk-button-new"
          id="send-button"
        >
          Send
        </button>
      </div>
    </div>
  </div>

  <script src="chat-dev.js"></script>
  <script src="logout-dev.js"></script>
{% endblock %}
